SERVER_PORT=8000
PORT=8000
NODE_ENV=development

# Logging
LOG_LEVEL=debug

# MongoDB connection string
MONGO_URI=mongodb://localhost:27017/contractors

# JWT Secret
TOKEN_SECRET=replace_me

# CORS
# Comma-separated list of allowed origins (e.g. https://app.example.com,https://admin.example.com)
# If empty, CORS will default to allow all origins.
CORS_ORIGINS=

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=300

# Stripe
STRIPE_SECRET_KEY=replace_me
STRIPE_WEBHOOK_SECRET=replace_me

# Stripe Connect
STRIPE_CONNECT_ENABLED=false
STRIPE_CONNECT_REQUIRED=false
STRIPE_COUNTRY=US
STRIPE_CONNECT_ACCOUNT_TYPE=express
STRIPE_BUSINESS_URL=https://example.com

# Server base URL (used in email links)
SERVER_URL=http://localhost:8000
SERVER_DOMAIN=http://localhost:8000

# Email (SMTP)
MAIL_URL=
MAIL_FROM=
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_SECURE=
MAIL_REQUIRE_TLS=
MAIL_USERNAME=replace_me
MAIL_PASSWORD=replace_me

# Optional email timeouts
MAIL_CONNECTION_TIMEOUT_MS=10000
MAIL_GREETING_TIMEOUT_MS=10000
MAIL_SOCKET_TIMEOUT_MS=20000

# Optional email pooling/retry/tls settings
MAIL_POOL=true
MAIL_POOL_MAX_CONNECTIONS=5
MAIL_POOL_MAX_MESSAGES=100
MAIL_SEND_MAX_ATTEMPTS=2
MAIL_VERIFY_TRANSPORT=false
MAIL_REQUIRED=false

# Optional TLS overrides (only if your SMTP provider requires it)
# MAIL_TLS_SERVERNAME=smtp.example.com
# MAIL_TLS_REJECT_UNAUTHORIZED=false
